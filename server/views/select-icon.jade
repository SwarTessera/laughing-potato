extends ./includes/layout
block main
  .container-fluid.grid
    .row.info-panel
      .alert.alert-info.fade.in 
          a.close(href='#', data-dismiss='alert', aria-label='close') &times;
          |Click on the icon which lies inside the box formed by your icons.

    .row.marginee
      //matrix framework
      -var count=1;
      -var r=0; //row no.
      -var c=1;  //column no.
      - for (var i = 1; i <= 60; i++) 
        if(count%12 == 1)
          - r++
          - c=1
        .col-md-1
          img.token.icon-size(id=r+"|"+c)
        - c++
        - count++

    .row.text-center
      // Button trigger modal
      button.btn.btn-primary.btn-lg.voice-modal(type='button', data-toggle='modal', data-target='#myModal', onclick="generate()")
        | Record your voice!
      form(name="form", method="post", action="/update")
        input.btn.btn-primary.btn-lg#signin-check(type='submit', value='Save')
      br
      br
      form(name="form", method="post", action="/check")
              input.btn.btn-primary.btn-lg(type='submit', value='Submit')

      
      img(src='http://i.imgur.com/OqzBgZI.png', onload='session(#{doc.password.i1}, #{doc.password.i2}, #{doc.password.i3}, #{doc.password.i4}, #{iconList})')
  

    #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            p #{doc.uId}
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') &times;
            |         
            h4#myModalLabel.modal-title Read the following sentences loud and clear
          |       
          .modal-body
            p#line1 
            p#line2
            p#line3
            p#line4
            p#line5
          |       
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal', onclick="abc()") Close
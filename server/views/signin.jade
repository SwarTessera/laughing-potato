extends ./includes/layout
block main
  .container-fluid.register.signin
    .testbox#signup
      h1 Login
      |   
      form(name="form", action='/signin', method="post")
        hr
        -if (sent)
          .alert.alert-success.fade.in 
            a.close(href='#', data-dismiss='alert', aria-label='close') &times;
            strong Email sent!
            | Please check your email.
        label#icon(for='name')
          i.fa.fa-user
        |   
        input#name(type='text', name='name', placeholder='User name', required='')
        |     
        |    
        p
          a(href='/forgot') Forgot Username or Password?
        |    
        input(type="submit", value='Proceed').button 
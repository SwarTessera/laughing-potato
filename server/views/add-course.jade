extends ./includes/layout
block main

  .container
    .row
      .col-md-4.col-md-offset-4
        h1.text-center Add a new Course
    .row
      .col-md-4.col-md-offset-4
        form(action='/addcourse' method='post')  
          .form-group
            input.form-control(type='text', placeholder='Course name' name='courseName')
          .form-group           
            .checkbox
              label
                input(type='checkbox', name='checkFeatured')
                |  Featured
          .form-group
            input.form-control(type='date', name='pDate')
            | 
          .form-group
            select.form-control(name='timing')
              option(value="1") 1-2
              option(value="2") 2-3
              option(value="3") 3-4
          .form-group
            select.form-control(name='courseBatch')
              option(value="week") Weekdays
              option(value="end") Weekends
          .form-group         
            button.btn.btn-default(type='submit') Submit

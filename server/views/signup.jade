extends ./includes/layout
block main

  .container
    .row
      .col-md-4.col-md-offset-4
        h1.text-center Sign Up and Join Us
    .row
      .col-md-4.col-md-offset-4
        form(action='/signup' method='post')  
          .form-group
            input.form-control(type='text', placeholder='Full name' name='fullName')
          .form-group
            input.form-control(type='text', placeholder='Email' name='userName')
          .form-group
            input.form-control(placeholder='Password' type='password' name='password')
          .form-group.text-center     
            button.btn.btn-primary(type='submit') Sign up
